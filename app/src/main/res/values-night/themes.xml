<resources>
    <!-- Base application theme. -->
    <attr name="surahColor" format="color" />
    <attr name="lineColor" format="color" />
    <attr name="listColor" format="color" />
    <attr name="menuTextColor" format="color" />
    <style name="Theme.Murottal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/fg_dark</item>
        <item name="colorSecondary">@color/bg_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="actionBarStyle">@color/toolbar_color</item>
        <item name="rippleColor">@color/ripple_dark</item>
        <item name="surahColor">@android:color/darker_gray</item>
        <item name="lineColor">@color/line_color_dark</item>
        <item name="listColor">@color/bg_dark</item>
        <item name="actionMenuTextColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <style name="NoActionBar" parent="Theme.Murottal">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>